<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BloodCertificationRegisterActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorHorizontalLine"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="이     름"
                android:textColor="#000000"
                android:gravity="center"/>

            <EditText
                android:id="@+id/blood_certificate_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="성       별"
                android:textColor="#000000"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/blood_certificate_male"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@color/colorInactive"
                    android:text="남"
                    android:textColor="#000000"/>

                <Button
                    android:id="@+id/blood_certificate_female"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@color/colorInactive"
                    android:text="여"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="생년월일"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:id="@+id/blood_certificate_birth"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:clickable="true"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="헌혈종류"
                android:textColor="#000000"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/blood_certificate_donation_type"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="헌혈일자"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:id="@+id/blood_certificate_date"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:clickable="true"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="혈액원명"
                android:textColor="#000000"
                android:gravity="center"/>

            <EditText
                android:id="@+id/blood_certificate_source"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:clickable="true"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/blood_certificate_submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="완료"
        android:background="@color/colorPrimary"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BloodCertificationCameraActivity">

    <SurfaceView
        android:id="@+id/blood_certificate_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/blood_certificate_camera_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/camera_transparent"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/blood_certificate_camera_scan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/camera_button"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>